<div class="entry">
  <h2><%= entry.title %> <%= entry.created_at.strftime("#{entry.created_at.day.ordinalize} %B %Y")%></h2>
  <h3>Updated: <%= entry.updated_at %></h3>
  <%= entry.text %>
  <%= entry.content %>
  <%= link_to 'Show', entry_path(entry) %>
  <%= link_to 'Edit', edit_entry_path(entry) %>
  <%= link_to 'Delete', entry_path(entry),
    method: :delete,
    data: {confirm: 'Are you sure?'} %>
</div>
