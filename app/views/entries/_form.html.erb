<%= form_with model: @entry, data: {controller: "form-submit", action: "keydown->form-submit#keyPress"}, local: true do |form| %>

  <% if @entry.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@entry.errors.count, "error") %> prohibited
        this entry from being saved:
      </h2>
      <ul>
        <% @entry.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
  <%= form.label :title %><br>
  <%= form.text_field :title, autofocus: true %>
  </p>

  <p>
  <%= form.label 'Content' %><br>
  <%= form.rich_text_area :content %>
  </p>

  <p>
  <%= form.submit data: {target: "form-submit.button"}%>
  </p>

<% end %>

