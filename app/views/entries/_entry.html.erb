<article class="entry">
  <h2><%= entry.title %></h2> <p><%=entry.created_at.strftime("#{entry.created_at.day.ordinalize} %B %Y")%></p>
  <%= entry.text %>
  <%= entry.content %>
  <%= link_to 'Edit', edit_entry_path(entry) %>
  <%= link_to 'Delete', entry_path(entry),
    method: :delete,
    data: {confirm: 'Are you sure?'} %>
  <p class="entry-updated-at"><small>Updated: <%= entry.updated_at %></small></p>
</article>
