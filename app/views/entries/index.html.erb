<div class="panel">
  <%= link_to 'Create new entry', new_entry_path %>
  <%= link_to 'Sign out', destroy_user_session_path, method: :delete%>
  <%= form_with(url: search_entries_path, method: "get", local: true) do %>
    <%= label_tag(:start_date, "Start date:") %>
    <%= select_date Date.today, prefix: :start_date %><br>
    <%= label_tag(:end_date, "End date:") %>
    <%= select_date Date.yesterday, prefix: :end_date %>
    <%= submit_tag("Filter") %>
  <% end %>
  <div data-controller="infinite-scroll" data-action="scroll@window->infinite-scroll#scroll">
    <div class="entry-container">
      <div data-target="infinite-scroll.entries">
        <%= render "entries" %>
      </div>
    </div>

    <div data-target="infinite-scroll.pagination">
      <%== pagy_nav(@pagy) %>
    </div>
  </div>
</div>
